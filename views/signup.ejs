<body  background="images/loginimage.jpeg" style="background-repeat: no-repeat; background-size: 2000px 1000px;">

	<%- include('partials/header') %>


	<div class="container" style="padding-top: 50px;">



	<div class="row justify-content-center">
	<div class="col-md-6">
	<div class="card">
	<header class="card-header">
		<a href="/login" class="float-right btn btn-outline-primary mt-1">Log in</a>
		<h4 class="card-title mt-2">Sign up</h4>
	</header>
	<article class="card-body">
		<%- include('partials/messages') %>
	<form action="/signupsubmit">
		
		<div class="form-row">
			
			<div class="col form-group">
				<label> Name </label>   
			  	<input name="uid" type="text" class="form-control" placeholder="">
			</div> 
			<div class="col form-group">
				<label>Ph.no</label>
			  	<input name="phno" type="Number" class="form-control" placeholder=" ">
			</div>
		</div> 
		<div class="form-group">
			<label>Roll.no</label>
			<input name="rno" type="text" class="form-control" placeholder="">
			
		</div>
	
		<div class="form-group">
			<label>Email address</label>
			<input name="email" type="email" class="form-control" placeholder="">
			
		</div>
	
		<div class="form-row">
			<div class="form-group col-md-6">
				<label>Create password</label>
		    	<input name="pwd" class="form-control" type="password">
		    </div>
			<div class="form-group col-md-6">
			 	<label>Confirm password</label>
		    	<input name="cpwd" class="form-control" type="password">
			</div> 
		</div> 
		
	    <div class="form-group">
	        <button type="submit" class="btn btn-primary btn-block"> Register  </button>
	    </div>
	                                     
	</form>
	</article>
	<div class="border-top card-body text-center">Have an account? <a href="/login">Log In</a></div>
	</div>
	</div> 

	</div> 


	</div> 



</body>
</html>