	</nav>

	<div class="container" style="padding-top: 100px">
    <div class="row">
			<div class="col-md-6">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">All Orders</h3>
					</div>
					<table class="table table-hover" id="dev-table">
						<thead>
							<tr>
								<th>S.no:</th>
								<th>UID:</th>
								<th>Roll:</th>
								<th>Date:</th>
								<th>Amount:</th>
								<th>Status:</th>
							</tr>
						</thead>
						<tbody>
							<%if (orders != null) {%>
								<%for(i =0;i<orders.length;i++){%>
									<tr>
										<td><%=i+1%></td>
										<td><%=orders[i].uid%></td>
										<td><%=orders[i].id%></td>
										<td><%=orders[i].date%></td>
										<td><%=orders[i].amount%></td>
										<td><%=orders[i].status%></td>
									</tr>
								<%}%>
							<%}%>
						</tbody>
					</table>
				</div>
			</div>
			<div class="col-md-6">
				<div class="panel panel-success">
					<div class="panel-heading">
						<h3 class="panel-title">All Issues</h3>
					</div>
					<table class="table table-hover" id="task-table">
						<thead>
							<tr>
								<th>S.no:</th>
								<th>UID:</th>
								<th>Roll::</th>
								<th>Date:</th>
								<th>Comment: </th>
								<th>Status: </th>
							</tr>
						</thead>
						<tbody>
							<%if (issues != null) {%>
								<%for(i =0;i<issues.length;i++){%>
									<tr>
										<td><%=i+1%></td>
										<td><%=issues[i].uid%></td>
										<td><%=issues[i].id%></td>
										<td><%=issues[i].date%></td>
										<td><%=issues[i].comment%></td>
										<td><%=issues[i].status%></td>
									</tr>
								<%}%>
							<%}%>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
